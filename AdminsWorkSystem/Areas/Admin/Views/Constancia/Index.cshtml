
@using AdminsWorkSystem.Utilidades
@{
    Layout = "~/Views/Shared/_Layout.cshtml";

    var estado = Context.Request.Query["estado"];//accder al estado que el usuario seleccione
    var entregado = "text-primary";
    var todas = "text-primary";

    switch (estado)
    {
        case "entregado":
            entregado = "active text-white";
            break;
        case "todas":
            todas = "active text-white";
            break;
    }
}

<br />

<div class="row">
    <div class="col-6">
        <h2 class="text-primary">Constancia</h2>
    </div>
    @if (User.IsInRole(DS.Role_Admin) || User.IsInRole(DS.Role_Coordinadores) || User.IsInRole(DS.Role_ResponsableC) || User.IsInRole(DS.Role_ResponsableU))
    {
        <div class="col-6 text-right">
            <a class="btn btn-primary" asp-action="Upsert"> <i class="fas fa-plus"></i>Subir Constancia</a>
    </div>
    }

</div>
<br/>
<div class="border p-3">
    <div class="d-lg-flex justify-content-between mb-3">
        <div class="p-2">
            <ul class="list-group list-group-horizontal-sm">                   
                    <a style="text-decoration:none;" asp-controller="Constancia" asp-action="Index" asp-route-estado="entregado">
                    <li class="list-group-item @entregado">Entregados</li>
                    </a>
                   <a style="text-decoration:none;" asp-controller="Constancia" asp-action="Index" asp-route-estado="todas">
                   <li class="list-group-item @todas">Todas</li>
                   </a>
            </ul>
        </div>
    </div>
    <br /><br />
<br />
<div class="table-responsive">
    <div class="p-4 border rounded">
        <table id="tblDatos" class="table table-striped table-bordered" style="width:100%">
            <thead class="thead-dark">
                <tr class="table-info">
                    <th>Nombre Responsable</th>
                    <th>Estudiante</th>
                    <th>Unidad</th>
                    <th>Especialidad</th>
                    <th>Estado Constancia</th>
                    <th></th>
                </tr>
            </thead>
        </table>
    </div>
</div>
</div>

@section Scripts{
    <script src="~/js/Constancia.js"></script>

}
