@model AdminsWorkSystem.Modelos.Unidades

@{

    Layout = "~/Views/Shared/_Layout.cshtml";
    var titulo = "Crear Unidad";
}

<form method="post">
    <div class="row p-3 border-0">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    </div>
    @if (Model.Id != 0)
    {
        // Actualizar
        titulo = "Actualizar Unidad";
    }

    <div class="col-12 border-bottom">
        <h2 class="text-primary">@titulo</h2>
    </div>
    <div class="col-8 pt-4">
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Nombre"></label>
            </div>
            <div class="col-8">
                <input asp-for="Nombre" onkeyup="mayus(this);"  class="form-control" is="input-cap" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
        </div>
        <br/>
        <div class="form-group row">
            <div class="col-8 offset-4">
                @if (Model.Id != 0)
                {
                    <partial name="_BotonesActualizarYRegresar" model="Model.Id" />
                }
                else
                {
                    <partial name="_BotonesCrearYRegresar" />
                }
            </div>
        </div>

    </div>

</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}







