@model AdminsWorkSystem.Modelos.ViewModels.EvidenciaOReporteVM
@using AdminsWorkSystem.Utilidades
<form method="post">
    <input hidden asp-for="EvidenciaOReporte.Id" />
    <input hidden asp-for="UsuarioAplicacion.Id" />
    <br />
    <div class="container">
        <div class="card">
            <div class="card-header bg-warning text-light ml-0 row container">
                <div class="col-12 d-none d-md-block col-md-6 pb-1">
                    <i class="fas fa-sync fa-spin"></i> &nbsp; Datos de Evidencia
                </div>
                <div class="col-12 col-md-4 offset-md-2 text-right">
                    <a asp-area="Estudiantes" asp-controller="EvidenciaOReporte" asp-action="Validacion" class="btn btn-outline-secondary form-control btn-sm">Regresar</a>
                </div>
            </div>
            <div class="card-body">
                <div class="container rounded p-2">
                    <div class="row">
                        <div class="col-12 col-lg-6 pb-4">
                            <div class="row">
                                <h4 class="d-flex justify-content-between align-items-center mb-3">
                                    <span class="text-success">Detalles de Envío:</span>
                                </h4>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">Nombres</div>
                                <div class="col-9">
                                    @if (User.IsInRole(DS.Role_ResponsableU) || User.IsInRole(DS.Role_ResponsableC) || User.IsInRole(DS.Role_JefaDepartamento))
                                    {
                                        <input asp-for="EvidenciaOReporte.UsuarioAplicacion.Nombres" class="form-control" />
                                    }
                                    else
                                    {
                                        <input asp-for="EvidenciaOReporte.UsuarioAplicacion.Nombres" readonly type="text" class="form-control" />
                                    }

                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">Sexo</div>
                                <div class="col-9">
                                    @if (User.IsInRole(DS.Role_ResponsableU) || User.IsInRole(DS.Role_ResponsableC) || User.IsInRole(DS.Role_JefaDepartamento))
                                    {
                                        <input asp-for="EvidenciaOReporte.UsuarioAplicacion.Sexo" class="form-control" />
                                    }
                                    else
                                    {
                                        <input asp-for="EvidenciaOReporte.UsuarioAplicacion.Sexo" readonly type="text" class="form-control" />
                                    }

                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">Lengua Materna</div>
                                <div class="col-9">
                                    @if (User.IsInRole(DS.Role_ResponsableU) || User.IsInRole(DS.Role_ResponsableC) || User.IsInRole(DS.Role_JefaDepartamento))
                                    {
                                        <input asp-for="EvidenciaOReporte.UsuarioAplicacion.LenguaMaterna" class="form-control" />
                                    }
                                    else
                                    {
                                        <input asp-for="EvidenciaOReporte.UsuarioAplicacion.LenguaMaterna" readonly type="text" class="form-control" />
                                    }

                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">Generación</div>
                                <div class="col-9">
                                    @if (User.IsInRole(DS.Role_ResponsableU) || User.IsInRole(DS.Role_ResponsableC) || User.IsInRole(DS.Role_JefaDepartamento))
                                    {
                                        <input asp-for="EvidenciaOReporte.UsuarioAplicacion.Generacion" class="form-control" />
                                    }
                                    else
                                    {
                                        <input asp-for="EvidenciaOReporte.UsuarioAplicacion.Generacion" readonly type="text" class="form-control" />
                                    }

                                </div>
                            </div>
                            @*<div class="row my-1">
                                <div class="col-3">Unidad</div>
                                <div class="col-9">
                                    @if (User.IsInRole(DS.Role_ResponsableU) || User.IsInRole(DS.Role_ResponsableC) || User.IsInRole(DS.Role_JefaDepartamento))
                                    {
                                        <input asp-for="UsuarioAplicacion.Unidades.Nombre" class="form-control" />
                                    }
                                    else
                                    {
                                        <input asp-for="UsuarioAplicacion.Unidades.Nombre" readonly type="text" class="form-control" />
                                    }

                                </div>
                            </div>*@
                           
                            <div class="row my-1">
                                <div class="col-3">Email</div>
                                <div class="col-9">
                                    @if (User.IsInRole(DS.Role_ResponsableU) || User.IsInRole(DS.Role_ResponsableC) || User.IsInRole(DS.Role_JefaDepartamento))
                                    {
                                        <input asp-for="EvidenciaOReporte.UsuarioAplicacion.Email" class="form-control" />
                                    }
                                    else
                                    {
                                        <input asp-for="EvidenciaOReporte.UsuarioAplicacion.Email" readonly type="text" class="form-control" />
                                    }

                                </div>
                            </div>
                            <br />
                            <div class="card border-warning mb-3" style="max-width: 50rem;">
                                <div class="card-header">Estatus Estudiante</div>
                                <div class="card-body">
                                    <h4 class="card-title">Tarjeta de advertencia</h4>
                                    <p class="card-text">Modificar Estatus Estudiante, Una vez modificado No podra recuperar!</p>
                                </div>
                                @if (User.IsInRole(DS.Role_ResponsableU) || User.IsInRole(DS.Role_Admin) || User.IsInRole(DS.Role_ResponsableC) || User.IsInRole(DS.Role_JefaDepartamento))
                                {
                                    <br />
                                    @if (Model.EvidenciaOReporte.UsuarioAplicacion.Status == DS.EstadoActivo)
                                    {
                                        <a asp-action="Baja" asp-route-id="@Model.EvidenciaOReporte.UsuarioAplicacion.Id" class="btn btn-danger form-control">
                                            Dar de baja
                                        </a>
                                    }
                                    @if (Model.EvidenciaOReporte.UsuarioAplicacion.Status == DS.EstadoBaja)
                                    {
                                        <label class="btn btn-danger form-control">@Model.EvidenciaOReporte.UsuarioAplicacion.Status</label>
                                    }
                                    @if (Model.EvidenciaOReporte.UsuarioAplicacion.Status == DS.EstadoRengreso)
                                    {
                                        <a asp-action="Baja" asp-route-id="@Model.EvidenciaOReporte.UsuarioAplicacion.Id" class="btn btn-danger form-control">
                                            Dar de baja
                                        </a>
                                    }
                                    
                                    @if (Model.EvidenciaOReporte.UsuarioAplicacion.Status == DS.EstadoActivo)
                                    {
                                        <a asp-action="Reingreso" asp-route-id="@Model.EvidenciaOReporte.UsuarioAplicacion.Id" class="btn btn-warning form-control">
                                            Reingreso
                                        </a>
                                    }
                                    
                                    @if (Model.EvidenciaOReporte.UsuarioAplicacion.Status == DS.EstadoActivo)
                                    {
                                        <a asp-action="Finalizado" asp-route-id="@Model.EvidenciaOReporte.UsuarioAplicacion.Id" class="btn btn-primary form-control">
                                            Finalizado
                                        </a>
                                    }
                                    
                                }
                                else
                                {
                                    <label class="btn btn-success form-control">@Model.EvidenciaOReporte.UsuarioAplicacion.Status</label>
                                }


                            </div>
                            
                        </div>
                        <div class="col-12 col-lg-5 offset-lg-1">
                            <h4 class="d-flex justify-content-between align-items-center mb-3">
                                <span class="text-success">Detalle del Reporte</span>
                            </h4>
                            <ul class="list-group mb-3">
                               @* @foreach (var item in Model)
                                {*@
                                    <li class="list-group-item d-flex justify-content-between p-2">
                                        <div class="row container">
                                            <div class="col-8">
                                                <input type="hidden" asp-for="EvidenciaOReporte.Id" />
                                            
                                                <input type="text" asp-for="@Model.EvidenciaOReporte.FechaInicio" class="my-0 text" /><br />
                                            <p class="text-bg-success">Fecha Inicio</p>
                                                <input type="text" asp-for="@Model.EvidenciaOReporte.FechaFinal" class="my-0 text"/><br />
                                            <p class="text-bg-success">Fecha Final</p>
                                                <input type="text" asp-for="@Model.EvidenciaOReporte.UnidadReceptora" class="my-0 text"/><br />
                                            <p class="text-bg-success">Unidad Receptora</p>
                                                <input type="text" asp-for="@Model.EvidenciaOReporte.Programa"class="my-0 text"/><br />
                                            <p class="text-bg-success">Programa</p>
                                                <input type="text" asp-for="@Model.EvidenciaOReporte.SubPrograma" class="my-0 text" /><br />
                                            <p class="text-bg-success">Sub Programa</p>
                                                <input type="text" asp-for="@Model.EvidenciaOReporte.Actividad" class="my-0 text" /><br />
                                            <p class="text-bg-success">Actividad</p>
                                                <input type="text" asp-for="@Model.EvidenciaOReporte.GrupoActual" class="my-0 text" /><br />
                                            <p class="text-bg-success">Grupo</p>
                                                <input type="text" asp-for="@Model.EvidenciaOReporte.SemestreActual" class="my-0 text"/><br />
                                            <p class="text-bg-success">Semestre</p>
                                                <input type="text" asp-for="@Model.EvidenciaOReporte.Estado" class="my-0 text" /><br />
                                            <p class="text-bg-success">Estado</p>
                                                <input type="text" asp-for="@Model.EvidenciaOReporte.Municipio" class="my-0 text" /><br />
                                            <p class="text-bg-success">Municipio</p>

                                            <a class="btn btn-lg btn btn-outline-success" src="@Model.EvidenciaOReporte.Archivo" href="@Model.EvidenciaOReporte.Archivo">Formatos</a>

                                            </div>            

                                        </div>
                                    </li>
                                

                                <li class="list-group-item bg-info">
                                    <div class="row container">
                                        <div class="col-8">
                                            <h6 class="text-white"></h6>
                                        </div>
                                        <div class="col-4 text-right">
                                            <h6 class="text-white"></h6>
                                        </div>
                                    </div>
                                </li>
                            </ul>
                            @if (User.IsInRole(DS.Role_ResponsableU) || User.IsInRole(DS.Role_Admin) || User.IsInRole(DS.Role_ResponsableC) || User.IsInRole(DS.Role_JefaDepartamento))
                            {
                                <br />
                                @if (Model.EvidenciaOReporte.Estado == DS.EstadoEnviado)
                                {
                                    <a asp-action="Aprovado" asp-route-id="@Model.EvidenciaOReporte.Id" class="btn btn-success form-control">
                                        Aprobar
                                    </a>
                                }
                                @if (Model.EvidenciaOReporte.Estado == DS.EstadoAprobado)
                                {
                                    <label class="btn btn-success form-control">@Model.EvidenciaOReporte.Estado</label>
                                }
                            }
                            else
                            {
                                <label class="btn btn-success form-control">@Model.EvidenciaOReporte.Estado</label>
                            }

                            @if (
                            Model.EvidenciaOReporte.Estado != DS.EstadoCancelado &&
                            (User.IsInRole(DS.Role_Admin) || User.IsInRole(DS.Role_ResponsableC) || User.IsInRole(DS.Role_JefaDepartamento)))
                            {
                                <div class="pt-2">
                                    <a asp-action="CancelarOrden" asp-route-id="@Model.EvidenciaOReporte.Id" class="btn btn-danger form-control">
                                        Cancelar 
                                    </a>
                                </div>
                            }

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

